{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",

    "rootDir": "web/src",
    "outDir": "docs",

    "strict": true,
    "noImplicitAny": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["web/src/**/*"]
}
